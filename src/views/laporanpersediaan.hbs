                  <div class="d-flex align-items-center">
                    <h4 class="card-title">Data Barang</h4>
                  </div>
                </div>
                <div class="card-body">
                  <!-- Tabel Barang -->
                  <div class="table-responsive">
                    {{#if barang.length}}
                      <table
                        id="barang-table"
                        class="table table-striped table-bordered"
                      >
                        <thead>
                          <tr>
                            <th>ID Barang</th>
                            <th>Kode Barang</th>
                            <th>Nama Barang</th>
                            <th>Ukuran</th>
                            <th>Jenis Barang</th>
                            <th>Jumlah</th>
                            <th>Status Kepala Produksi</th>
                            <th>Status Manager</th>
                            <th>Status Direktur</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each barang}}
                            <tr>
                              <td>{{this.id_barang}}</td>
                              <td>{{this.kode_barang}}</td>
                              <td>{{this.nama_barang}}</td>
                              <td>{{this.ukuran}}</td>
                              <td>{{this.jenis_barang}}</td>
                              <td>{{this.jumlah}}</td>
                              <td>
                                {{#ifEquals
                                  this.status_kepala_produksi "approved"
                                }}
                                  <span
                                    class="badge bg-success"
                                  >Disetujui</span>
                                {{else ifEquals
                                  this.status_kepala_produksi "rejected"
                                }}
                                  <span class="badge bg-danger">Ditolak</span>
                                {{else ifEquals
                                  this.status_kepala_produksi "pending"
                                }}
                                  <span class="badge bg-warning">Menunggu</span>
                                {{else}}
                                  <span class="badge bg-secondary">Belum di cek</span>
                                {{/ifEquals}}
                              </td>
                              <td>
                                {{#ifEquals this.status_manager "approved"}}
                                  <span
                                    class="badge bg-success"
                                  >Disetujui</span>
                                {{else ifEquals this.status_manager "rejected"}}
                                  <span class="badge bg-danger">Ditolak</span>
                                {{else ifEquals this.status_manager "pending"}}
                                  <span class="badge bg-warning">Menunggu</span>
                                {{else}}
                                  <span class="badge bg-secondary">Belum di cek</span>
                                {{/ifEquals}}
                              </td>
                              <td>
                                {{#ifEquals this.status_direktur "approved"}}
                                  <span
                                    class="badge bg-success"
                                  >Disetujui</span>
                                {{else ifEquals
                                  this.status_direktur "rejected"
                                }}
                                  <span class="badge bg-danger">Ditolak</span>
                                {{else ifEquals this.status_direktur "pending"}}
                                  <span class="badge bg-warning">Menunggu</span>
                                {{else}}
                                  <span class="badge bg-secondary">Belum di cek</span>
                                {{/ifEquals}}
                              </td>
                            </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    {{else}}
                      <p>No data available.</p>
                    {{/if}}
                  </div>
