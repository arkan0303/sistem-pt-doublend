            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <div class="d-flex align-items-center">
                    <h4 class="card-title">Data Barang</h4>
                  </div>
                </div>
                <div class="card-body">
                  <!-- Tabel Barang -->
                  <div class="table-responsive">
                    {{#if barang}}
                      <table
                        id="barang-table"
                        class="table table-striped table-bordered"
                      >
                        <thead>
                          <tr>
                            <th>ID Barang</th>
                            <th>Kode Barang</th>
                            <th>Nama Barang</th>
                            <th>Ukuran</th>
                            <th>Jenis Barang</th>
                            <th>Jumlah</th>
                            <th>Status Persetujuan</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each barang}}
                            <tr>
                              <td>{{this.id_barang}}</td>
                              <td>{{this.kode_barang}}</td>
                              <td>{{this.nama_barang}}</td>
                              <td>{{this.ukuran}}</td>
                              <td>{{this.jenis_barang}}</td>
                              <td>{{this.jumlah}}</td>
                              <td class="text-left">
                                {{#if this.status_manager}}
                                  <!-- Jika status_kepala_produksi sudah di-update, tampilkan label status_kepala_produksi -->
                                  <span
                                    class="badge bg-info"
                                  >{{this.status_manager}}</span>
                                {{else}}
                                  <!-- Jika status belum di-update, tampilkan dropdown untuk memilih status -->
                                  <div class="dropdown">
                                    <button
                                      class="btn btn-secondary dropdown-toggle btn-sm"
                                      type="button"
                                      id="dropdownMenuButton{{this.id_barang}}"
                                      data-bs-toggle="dropdown"
                                      aria-expanded="false"
                                    >
                                      Pilih Status manager
                                    </button>
                                    <ul
                                      class="dropdown-menu"
                                      aria-labelledby="dropdownMenuButton{{this.id_barang}}"
                                    >
                                      <form
                                        action="/updateApproval"
                                        method="POST"
                                        style="display: inline;"
                                      >
                                        <input
                                          type="hidden"
                                          name="id_barang"
                                          value="{{this.id_barang}}"
                                        />
                                        <button
                                          type="submit"
                                          name="status"
                                          value="approved"
                                          class="dropdown-item"
                                        >
                                          Approve
                                        </button>
                                        <button
                                          type="submit"
                                          name="status"
                                          value="rejected"
                                          class="dropdown-item"
                                        >
                                          Reject
                                        </button>
                                        <button
                                          type="submit"
                                          name="status"
                                          value="pending"
                                          class="dropdown-item"
                                        >
                                          Pending
                                        </button>
                                      </form>
                                    </ul>
                                  </div>
                                {{/if}}
                                <!-- Untuk status_kepala_produksi -->
                                {{#if this.status_kepala_produksi}}
                                  <!-- Jika status_kepala_produksi sudah di-update, tampilkan label status_kepala_produksi -->
                                  <span
                                    class="badge bg-info"
                                  >{{this.status_kepala_produksi}}</span>
                                {{else}}
                                  <!-- Jika status belum di-update, tampilkan dropdown untuk memilih status -->
                                  <div class="dropdown">
                                    <button
                                      class="btn btn-secondary dropdown-toggle btn-sm"
                                      type="button"
                                      id="dropdownMenuButtonKepalaProduksi{{this.id_barang}}"
                                      data-bs-toggle="dropdown"
                                      aria-expanded="false"
                                    >
                                      Pilih Status Kepala Produksi
                                    </button>
                                    <ul
                                      class="dropdown-menu"
                                      aria-labelledby="dropdownMenuButtonKepalaProduksi{{this.id_barang}}"
                                    >
                                      <form
                                        action="/updateApproval"
                                        method="POST"
                                        style="display: inline;"
                                      >
                                        <input
                                          type="hidden"
                                          name="id_barang"
                                          value="{{this.id_barang}}"
                                        />
                                        <button
                                          type="submit"
                                          name="status"
                                          value="approved"
                                          class="dropdown-item"
