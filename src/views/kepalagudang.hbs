    <script>
      $(document).ready(function () { // Inisialisasi DataTables untuk tabel
      barang dengan pagination $('#barang-table').DataTable({ pageLength: 5, //
      Jumlah default entri per halaman lengthMenu: [5, 10, 25, 50] // Opsi
      jumlah entri per halaman }); $('#btn-custom-toggle').on('click', function
      () { $('body').toggleClass('sidebar-mini'); }); }); function
      setApproval(id_barang, status, element) { // Dapatkan tombol dropdown dari
      elemen yang di-klik var dropdownButton =
      element.closest('.dropdown').querySelector('.dropdown-toggle'); //
      Perbarui teks pada tombol dropdown dropdownButton.textContent = status; //
      Hapus semua kelas warna btn yang ada
      dropdownButton.classList.remove('btn-secondary', 'btn-warning',
      'btn-success', 'btn-danger'); // Tambahkan kelas warna berdasarkan status
      if (status === 'Menunggu') { dropdownButton.classList.add('btn-warning');
      } else if (status === 'Disetujui') {
      dropdownButton.classList.add('btn-success'); } else if (status ===
      'Ditolak') { dropdownButton.classList.add('btn-danger'); } // Menampilkan
      notifikasi alert('Barang dengan ID ' + id_barang + ' diubah statusnya
      menjadi ' + status); } function updateApproval(id_barang, status) {
      fetch('/updateApproval', { method: 'POST', headers: { 'Content-Type':
      'application/json', }, body: JSON.stringify({ id_barang, status }), })
      .then(response => response.json()) .then(data => { alert(data.message);
      location.reload(); // Reload halaman setelah pembaruan }) .catch(error =>
      { console.error('Error:', error); }); }
    </script>

